@model OkulSistem.Models.Instructor
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <title>SYSTEM</title>
    <style>
       
        body {
            background-color: #121212; /* Siyahımsı arka plan */
            color: #ffffff; /* Beyaz yazı */
            font-family: 'Arial', sans-serif; /* Modern yazı tipi */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .log-form {
            background-color: rgba(255, 255, 255, 0.1); /* Hafif saydam arka plan */
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px #8a2b74; /* Neon gölgelendirme */
            text-align: center;
            width: 300px;
        }

            .log-form h2 {
                margin-bottom: 20px;
                color:white; /* Yeşilimsi neon rengi */
                text-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
            }

            .log-form input {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: none;
                border-radius: 5px;
                background-color: #ffffff; /* Beyaz arka plan */
                color: #121212; /* Siyah yazı */
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.5); /* Neon gölgelendirme */
                outline: none;
            }

                .log-form input::placeholder {
                    color: #aaaaaa; /* Placeholder rengi */
                }

            .log-form button {
                width: 100%;
                padding: 10px;
                background-color: #8a2b74; /* Yeşil arka plan */
                border: none;
                border-radius: 5px;
                color: white;
                font-weight: bold;
                cursor: pointer;
                box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74; /* Neon gölgelendirme */
                transition: all 0.3s ease;
            }

        .error-message {
            color: #cc8bcc;
            font-size: 17px;
            margin-top: 15px;
            margin-bottom:5px;
            text-align: center;
        }

                .log-form button:hover {
                    background-color: #30912d; /* Daha koyu yeşil */
                    box-shadow: 0 0 20px #30912d, 0 0 30px #30912d; /* Daha yoğun neon efekt */
                }
    </style>
</head>
<body>

<div class="log-form">
    <h2>WELCOME</h2>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }
        <form asp-action="GirisYap" asp-controller="Login" method="post">
        <input name="Email" type="text"  placeholder="email" />
        <input name="Password" type="password"  placeholder="password"  />
        <button type="submit" class="btn">Login</button>
        
    </form>
</div>
</body>
</html>

