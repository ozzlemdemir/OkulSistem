@model IEnumerable<OkulSistem.Models.StudentsCourse>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci Kursları</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #1e1e1e;
        }

        th, td {
            text-align: left;
            padding: 10px;
            border: 1px solid #ba73ba;
        }

        th {
            background-color: #2a2a2a;
            color: #ffffff;
        }

        td {
            background-color: #1e1e1e;
        }

        tr:hover {
            background-color: #2a2a2a;
        }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }
    </style>

  
</head>
<body>
    <h1>Öğrencilerin Aldığı Kurslar</h1>
    <table>
        <thead>
            <tr>
                <th>Seçim ID</th>
                <th>Öğrenci ID</th>
                <th>Kurs ID</th>
                <th>Öğrenci Adı</th>
                <th> Soyadı</th>
                <th>Kurs Adı</th>
                <th>Kredi</th>
                
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SelectionID</td>
                    <td>@item.StudentID</td>
                    <td>@item.CourseID</td>
                    <td>@item.Student?.FirstName  </td>
                    <td>@item.Student?.LastName </td>
                    <td>@item.Course?.CourseName </td>
                    <td>@item.Course?.Credits</td>
                    

                 
                </tr>
            }
        </tbody>
    </table>
    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>