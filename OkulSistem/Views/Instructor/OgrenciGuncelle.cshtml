@model OkulSistem.Models.Student

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğrenci Güncelle</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
        }

        .alert {
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            text-align: left;
        }

        .alert-success {
            background-color: #4caf50;
            color: white;
        }

        .alert-danger {
            background-color: #f44336;
            color: white;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-size: 1rem;
            font-weight: bold;
            text-align: left;
        }

        input {
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ba73ba;
            border-radius: 5px;
            background-color: #2a2a2a;
            color: #ffffff;
        }

            input:focus {
                outline: none;
                border-color: #8a2b74;
                box-shadow: 0 0 5px #ba73ba;
            }

        button {
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            background-color: #ba73ba;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }

            button:hover {
                background-color: #8a2b74;
            }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }

        hr {
            border: 1px solid #ba73ba;
            margin: 20px 0;
        }
    </style>
    </head>
    <body>
<h2>Öğrenci Güncelle</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<form method="get" asp-action="OgrenciGuncelle">
    <div class="form-group">
        <label for="id">Öğrenci ID:</label>
        <input type="text" name="id" class="form-control" placeholder="Öğrenci ID'sini girin" value="@Model?.StudentID" />
    </div>
    <button type="submit" class="btn btn-info">Ara</button>
</form>

<hr />


@if (Model != null && !string.IsNullOrEmpty(Model.StudentID))
{
    <form method="post" asp-action="OgrenciGuncelle">
        <input type="hidden" asp-for="StudentID" />

        <div class="form-group">
            <label for="FirstName">Ad:</label>
            <input asp-for="FirstName" class="form-control"  value="@Model.FirstName" placeholder="Adı girin" />
        </div>

        <div class="form-group">
            <label for="LastName">Soyad:</label>
            <input asp-for="LastName" class="form-control" value="@Model.LastName" placeholder="Soyadı girin" />
        </div>

        <div class="form-group">
            <label for="Email">E-posta:</label>
            <input asp-for="Email" class="form-control" value="@Model.Email" placeholder="E-posta adresini girin" />
        </div>

        <div class="form-group">
            <label for="Department">Departman:</label>
            <input asp-for="Department" class="form-control" value="@Model.Department" placeholder="Departman adı girin" />
        </div>

        <div class="form-group">
            <label for="Password">Şifre:</label>
            <input asp-for="Password" type="password" class="form-control" value="@Model.Password" placeholder="Şifreyi girin" />
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
}
<div style="margin-top: 10px;">
    <div style="margin-top: 10px;">
        <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
    </div>
</div>
</body>
</html>