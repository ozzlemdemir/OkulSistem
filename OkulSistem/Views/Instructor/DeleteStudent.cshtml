
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci Sil</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            text-align: center;
            margin: 0;
            padding: 50px 20px 0;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-size: 1.1rem;
            color: white;
        }

        input {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
            background-color: #2a2a2a;
            color: white;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
            outline: none;
        }

            input::placeholder {
                color: #aaaaaa;
            }

            input:focus {
                background-color: #3a3a3a;
                box-shadow: 0 0 10px #ba73ba, 0 0 20px #ba73ba;
            }

        button {
            width: 40%;
            padding: 10px;
            background-color: #ba73ba;
            border: none;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0 0 5px #ba73ba, 0 0 20px #ba73ba;
            transition: all 0.3s ease;
            margin-bottom: 15px;
        }

            button:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 10px #ba73ba, 0 0 25px #ba73ba;
            }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 10px #ba73ba, 0 0 25px #ba73ba;
            }

        .error-message {
            color: #cc8bcc;
            font-size: 17px;
            margin-top: 15px;
            margin-bottom: 5px;
        }

        .success-message {
            color: #30912d;
            font-size: 17px;
            margin-top: 15px;
            margin-bottom: 5px;
        }
    </style>

</head>
<body>
    <h1>Öğrenci Sil</h1>
    <form method="post" asp-action="DeleteStudent" asp-controller="Instructor">
        <label for="id">Öğrenci ID:</label>
        <input type="text" id="id" name="id" placeholder="Öğrenci ID giriniz" required />
        <button type="submit">Sil</button>
    </form>
    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <p style="color:  #cc8bcc;">@TempData["Error"]</p>
    }

    @if (TempData["Success"] != null)
    {
        <p style="color:  #cc8bcc;">@TempData["Success"]</p>
    }
</body>
</html>