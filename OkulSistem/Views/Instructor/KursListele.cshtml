@model IEnumerable<OkulSistem.Models.Course>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CourseList</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        table {
            margin: 0 auto;
            width: 80%;
            border-collapse: collapse;
            background-color: #1e1e1e;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
        }

        th, td {
            border: 1px solid #ba73ba;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #8a2b74;
            color: #ffffff;
            font-size: 1.2rem;
        }

        td {
            font-size: 1rem;
            color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: #2a2a2a;
        }

        tr:nth-child(odd) {
            background-color: #1e1e1e;
        }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }
    </style>
</head>
<body>
    <h1>KursListesi</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Kurs ID</th>
                <th>Kurs Adı</th>
                <th>Kurs Kredisi</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.CourseID</td>
                    <td>@student.CourseName</td>
                    <td>@student.Credits</td>
                   
                </tr>
            }
        </tbody>
    </table>
    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>
