@model OkulSistem.Models.Course

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KursEkle</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .container {
            margin: 0 auto;
            width: 50%;
            background-color: #1e1e1e;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
            padding: 20px;
        }

        .alert-success {
            color: #28a745;
            background-color: #d4edda;
            border-color: #c3e6cb;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        form div {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #ffffff;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ba73ba;
            border-radius: 5px;
            background-color: #2a2a2a;
            color: #ffffff;
        }

        button {
            background-color: #ba73ba;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
        }

            button:hover {
                background-color: #8a2b74;
            }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Yeni Kurs Ekle</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="KursEkle" asp-controller="Instructor" method="post">
            <div>
                <label for="CourseID">ID:</label>
                <input type="text" id="CourseID" name="CourseID" required />
            </div>
            <div>
                <label for="CourseName">Kurs Adı:</label>
                <input type="text" id="CourseName" name="CourseName" required />
            </div>
            <div>
                <label for="Credits">Kurs Kredisi:</label>
                <input type="text" id="Credits" name="Credits" required />
            </div>
            <button type="submit">Ekle</button>
        </form>
    </div>
    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>