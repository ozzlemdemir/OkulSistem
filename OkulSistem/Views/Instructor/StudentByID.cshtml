@model OkulSistem.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student By ID</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
        }

        label {
            display: block;
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: left;
        }

        input {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ba73ba;
            border-radius: 5px;
            background-color: #2a2a2a;
            color: #ffffff;
            margin-bottom: 20px;
        }

            input:focus {
                outline: none;
                border-color: #8a2b74;
                box-shadow: 0 0 5px #ba73ba;
            }

        button {
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            background-color: #ba73ba;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }

            button:hover {
                background-color: #8a2b74;
            }

        .alert {
            margin-top: 10px;
            padding: 10px;
            border-radius: 5px;
            text-align: left;
        }

        .alert-error {
            background-color: #f44336;
            color: white;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            background-color: #1e1e1e;
        }

        th, td {
            text-align: left;
            padding: 10px;
            border: 1px solid #ba73ba;
        }

        th {
            background-color: #2a2a2a;
            color: #ffffff;
        }

        td {
            background-color: #1e1e1e;
        }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }
    </style>
</head>
<body>
    <h1>Öğrenci Ara</h1>
    <form method="get" asp-action="StudentByID" asp-controller="Instructor">
        <label for="id">Öğrenci ID:</label>
        <input type="text" id="id" name="id" placeholder="Öğrenci ID giriniz" required />
        <button type="submit">Ara</button>
    </form>

    @if (TempData["Error"] != null)
    {
        <p style="color:  #cc8bcc;">@TempData["Error"]</p>
    }

    @if (Model != null)
    {
        <h1>Öğrenci Detayları</h1>
        <table>
            <tr>
                <th>Öğrenci ID</th>
                <td>@Model.StudentID</td>
            </tr>
            <tr>
                <th>Ad</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Soyad</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Bölüm</th>
                <td>@Model.Department</td>
            </tr>
        </table>
    }
    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>