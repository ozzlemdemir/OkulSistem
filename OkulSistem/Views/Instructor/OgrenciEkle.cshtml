@model OkulSistem.Models.Student


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci Ekle</title>
</head>
<body>
    <div class="container">
        <h1>Yeni Öğrenci Ekle</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="OgrenciEkle" asp-controller="Instructor" method="post">
            <div>
                <label for="StudentID">ID:</label>
                <input type="text" id="StudentID" name="StudentID" required />
            </div>
            <div>
                <label for="FirstName">Ad:</label>
                <input type="text" id="FirstName" name="FirstName" required />
            </div>
            <div>
                <label for="LastName">Soyad:</label>
                <input type="text" id="LastName" name="LastName" required />
            </div>
            <div>
                <label for="Email">E-posta:</label>
                <input type="email" id="Email" name="Email" required />
            </div>
            <div>
                <label for="Password">Şifre:</label>
                <input type="password" id="Password" name="Password" required />
            </div>
            <div>
                <label for="Department">Bölüm:</label>
                <input type="text" id="Department" name="Department" required />
            </div>
            <button type="submit">Ekle</button>
        </form>
    </div>

    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>