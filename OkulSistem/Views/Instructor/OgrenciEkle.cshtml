@model OkulSistem.Models.Student


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci Ekle</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-size: 1rem;
            font-weight: bold;
            text-align: left;
        }

        input {
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ba73ba;
            border-radius: 5px;
            background-color: #2a2a2a;
            color: #ffffff;
        }

            input:focus {
                outline: none;
                border-color: #8a2b74;
                box-shadow: 0 0 5px #ba73ba;
            }

        button {
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            background-color: #ba73ba;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }

            button:hover {
                background-color: #8a2b74;
            }

        .alert-success {
            background-color: #4caf50;
            color: white;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            text-align: center;
        }

        .btn-secondary {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn-secondary:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }
    </style>

</head>
<body>
    <div class="container">
        <h1>Yeni Öğrenci Ekle</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="OgrenciEkle" asp-controller="Instructor" method="post">
            <div>
                <label for="StudentID">ID:</label>
                <input type="text" id="StudentID" name="StudentID" required />
            </div>
            <div>
                <label for="FirstName">Ad:</label>
                <input type="text" id="FirstName" name="FirstName" required />
            </div>
            <div>
                <label for="LastName">Soyad:</label>
                <input type="text" id="LastName" name="LastName" required />
            </div>
            <div>
                <label for="Email">E-posta:</label>
                <input type="email" id="Email" name="Email" required />
            </div>
            <div>
                <label for="Password">Şifre:</label>
                <input type="password" id="Password" name="Password" required />
            </div>
            <div>
                <label for="Department">Bölüm:</label>
                <input type="text" id="Department" name="Department" required />
            </div>
            <button type="submit">Ekle</button>
        </form>
    </div>

    <div style="margin-top: 10px;">
        <div style="margin-top: 10px;">
            <a href="/Home/Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>