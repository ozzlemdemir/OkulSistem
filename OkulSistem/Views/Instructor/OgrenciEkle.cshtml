@model OkulSistem.Models.Student
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci Ekle</title>
    <link href="~/CSS/OgrenciEkle.css" rel="stylesheet" />
</head>
<body>
    <header>Öğrenci Ekle</header>

    @if (TempData["ErrorMessage"] != null)
    {
        <div>@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div>@TempData["SuccessMessage"]</div>
    }

    <form asp-action="OgrenciEkle" method="post">
        <label for="StudentID">Öğrenci ID:</label>
        <input type="text" id="StudentID" name="StudentID" required /><br />

        <label for="FirstName">Ad:</label>
        <input type="text" id="FirstName" name="FirstName" required /><br />

        <label for="LastName">Soyad:</label>
        <input type="text" id="LastName" name="LastName" required /><br />

        <label for="Email">E-posta:</label>
        <input type="email" id="Email" name="Email" required /><br />

        <label for="Department">Bölüm:</label>
        <input type="text" id="Department" name="Department" required /><br />

        <label for="Password">Şifre:</label>
        <input type="password" id="Password" name="Password" required /><br />

        <label for="Role">Rol:</label>
        <select id="Role" name="Role">
            <option value="Student">Öğrenci</option>
        </select><br />

        <button type="submit">Ekle</button>
    </form>

    <footer>
        <a href="/Home/Index">Ana Sayfaya Dön</a>
    </footer>
</body>
</html>