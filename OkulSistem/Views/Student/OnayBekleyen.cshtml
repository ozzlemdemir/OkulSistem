
@model IEnumerable<OkulSistem.Models.InstructorCourse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OnayBekleyen</title>
    <link href="~/CSS/OnayBekleyen.css" rel="stylesheet" />
</head>
<body>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }
    <h1>Onay Bekleyen Dersler</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ders ID</th>
                <th>Ders Adı</th>
                <th>Öğretmen</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var course in Model)
                {
                    <tr>
                        <td>@course.Course?.CourseID</td>
                        <td>@course.Course?.CourseName</td>
                        <td>@course.Instructor?.FirstName @course.Instructor?.LastName</td> 
                        <td>Onay Bekliyor</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Onay bekleyen ders bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 10px;">
        <a href="/Student/DersSec" class="btn btn-secondary">Ders Seçim Sayfasına Dön</a>
    </div>
</body>
</html>
