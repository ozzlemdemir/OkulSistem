@model IEnumerable<OkulSistem.Models.StudentsCourse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetStudentCourses</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 50px 20px 0;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .container {
            margin: 0 auto;
            width: 60%;
            background-color: #1e1e1e;
            border-radius: 10px;
            box-shadow: 0 0 10px #8a2b74, 0 0 20px #8a2b74;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            text-align: left;
            padding: 15px;
            border-bottom: 1px solid #ba73ba;
        }

        th {
            background-color: #ba73ba;
            color: #ffffff;
            font-weight: bold;
        }

        td {
            background-color: #2a2a2a;
        }

        tr:hover td {
            background-color: #8a2b74;
        }

        .btn {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #ba73ba;
            border-radius: 5px;
            transition: all 0.3s;
            box-shadow: 0 0 5px #8a2b74, 0 0 10px #8a2b74;
        }

            .btn:hover {
                background-color: #8a2b74;
                box-shadow: 0 0 15px #ba73ba, 0 0 25px #ba73ba;
            }
    </style>

</head>
<body>
   
    <h1>Seçilen Kurslar</h1>


    <table class="table table-bordered">
        <thead class="tbhead">
            <tr>

                <th>Kurs ID</th>
                <th>Kurs Adı</th>
                <th>Kredi</th>

                
            </tr>
        </thead>
        <tbody class="tbbody">
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Course?.CourseID</td>
                    <td>@course.Course?.CourseName</td>
                    <td>@course.Course?.Credits</td>
                    
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
