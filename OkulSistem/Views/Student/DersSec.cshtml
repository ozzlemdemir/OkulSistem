@model IEnumerable<OkulSistem.Models.Course>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DersSec</title>
    <link rel="stylesheet" href="~/CSS/DersSec.css" />
</head>
<body>
    <h2>Seçebileceğiniz Dersler</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Kurs Adı</th>
                <th>Instructor</th>
                <th>Onay Durumu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Instructor?.FirstName @course.Instructor?.LastName</td>
                    <td>
                        <form method="post" action="@Url.Action("DersSec", "Student")">
                            <input type="hidden" name="courseId" value="@course.CourseID" />
                            <button type="submit" class="btn btn-primary">Ders Seç</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="margin-top: 10px;">
        <a href="/Menu/OgrenciMenu" class="btn btn-secondary">Ana Sayfaya Dön</a>
    </div>
    </body>
</html>
